<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Switch
            android:id="@+id/digitsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digits"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <Switch
            android:id="@+id/lettersSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letters"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <Switch
            android:id="@+id/symbolsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbols"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <ImageView
            android:id="@+id/refreshIcon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/ic_refresh"
            android:contentDescription="@string/refresh_password"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/lengthSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="36"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/lengthLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Length: "
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <TextView
            android:id="@+id/lengthValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/generatedPasswordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/copyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Password"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>

</LinearLayout>
